{
  "name": "tonal",
  "description": "A functional music theory library",
  "version": "3.0.0-alpha2",
  "module": "tonal/index.js",
  "main": "build/dist/tonal.min.js",
  "types": "tonal/index.d.ts",
  "scripts": {
    "test": "jest",
    "build": "npm run build:dist && npm run build:readme",
    "build:dist": "rollup -c rollup.config.js",
    "build:readme": "ls -d */index.js | cut -d'/' -f1 | xargs -I {} bash -c \"jsdoc2md -d 1 --name-format --member-index-format list '{}'/index.js > '{}'/README.md\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run build:readme"
    }
  },
  "lint-staged": {
    "linters": {
      "*.js": "eslint",
      "*.{js,json}": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "/build/**"
    ]
  },
  "homepage": "https://github.com/danigb/tonal#readme",
  "repository": "https://github.com/danigb/tonal",
  "bugs": {
    "url": "https://github.com/danigb/tonal/issues"
  },
  "author": "danigb@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "babel-jest": "^24.5.0",
    "gh-pages": "^2.0.1",
    "husky": "^1.1.2",
    "jest": "^24.5.0",
    "jsdoc": "^3.5.5",
    "jsdoc-to-markdown": "^4.0.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.14.3",
    "rollup": "^1.6.0",
    "rollup-plugin-buble": "^0.19.6",
    "rollup-plugin-filesize": "^6.0.1",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-uglify": "^6.0.2"
  }
}
